%section#deviseauth
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
    = devise_error_messages!
    %fieldset
      %legend
        Register with #{project_name}
      .row
        .email_signup.span6
          .control-group
            = f.label :email, :class => 'control-label'
            .controls
              = f.text_field :email, :class => 'input-xlarge'

          .control-group
            = f.label :password, :class => 'control-label'
            .controls
              = f.password_field :password, :class => 'input-xlarge'
          .control-group
            = f.label :password_confirmation, :class => 'control-label'
            .controls
              = f.password_field :password_confirmation, :class => 'input-xlarge'

          .control-group
            .controls
              = f.submit "Sign up", :class => 'btn btn-primary btn-large'
        .oauth_signup.span6
          .control-group
            %h3
              Or Sign Up with
          .control-group
            = render :partial => 'devise/shared/oauth_links'

